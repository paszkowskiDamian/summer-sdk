{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015",
            "esnext"
        ],
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@summer-sdk/domain": [
                "src/domain/index.ts"
            ],
            "@summer-sdk/types/*": [
                "src/types/*"
            ]
        }
    }
}